        <?php $projectDetails = $this->project->getProjectDetails()->getFirst() ?>
        <h2 class="block-title"><?= $projectDetails->getLabel() ?></h2>
        <div class="listElem">

            <div class="description">
                <p><?= $projectDetails->getDescription() ?></p>
            </div>

            <div class="contact">
                <?php $client = $project->getContactRelatedByFkContactClientId() ?>
                <?php if (!empty($client)): ?>
